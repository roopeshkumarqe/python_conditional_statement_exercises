def friends_in_trouble(j_angry, s_angry):
    if j_angry and s_angry is True:
        return True
    else:
        return False

try:
    j_angry = bool(input("Please tell John is angry and making you in trouble: "))
    s_angry = bool(input("Please tell Smith is angry and making you in trouble: "))
    result = friends_in_trouble(j_angry, s_angry)
    print(f"Output is ", {result})
except ValueError:
    print("Invalid input. Please enter a boolean value True or False.")




